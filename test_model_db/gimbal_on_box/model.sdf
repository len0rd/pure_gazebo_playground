<?xml version='1.0'?>
<sdf version='1.6'>
  <model name='gimbal_on_box'>
    <model name='cardboard_box'>
      <!--tmiller: make box static so it doesnt move-->
      <static>1</static>
      <pose frame=''>0 0 0.15 0 -0 0</pose>
      <link name='link'>
        <inertial>
          <mass>2</mass>
          <inertia>
            <ixx>0.0416667</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.0566667</iyy>
            <iyz>0</iyz>
            <izz>0.0683333</izz>
          </inertia>
        </inertial>
        <collision name='collision'>
          <geometry>
            <box>
              <size>0.5 0.4 0.3</size>
            </box>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>1</mu>
                <mu2>1</mu2>
              </ode>
            </friction>
            <contact>
              <ode>
                <kp>1e+07</kp>
                <kd>1</kd>
                <min_depth>0.001</min_depth>
                <max_vel>0.1</max_vel>
              </ode>
            </contact>
          </surface>
        </collision>
        <visual name='visual'>
          <pose frame=''>0 0 -0.15 0 -0 0</pose>
          <geometry>
            <mesh>
              <uri>model://cardboard_box/meshes/cardboard_box.dae</uri>
              <scale>1.25932 1.00745 0.755591</scale>
            </mesh>
          </geometry>
        </visual>
      </link>
    </model>

    <include>
      <uri>model://pitch_yaw_gimbal</uri>
      <pose frame=''>0 0.2 0.15 0 0 0</pose>
    </include>

    <joint name="box_gimbal_joint" type='fixed'>
      <parent>cardboard_box::link</parent>
      <child>pitch_yaw_gimbal::pitch_arm</child>
      <pose>0 0.25 0.2 0 0 0</pose>
    </joint>
    
    <static>0</static>
    <allow_auto_disable>1</allow_auto_disable>

  </model>
</sdf>
